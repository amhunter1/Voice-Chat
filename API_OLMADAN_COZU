```java
// StandaloneVoiceServer.java
public class StandaloneVoiceServer {
    public static void main(String[] args) {
        // Start voice server without Hytale
        VoiceServer server = new VoiceServer(24454);
        PlayerPositionManager posManager = new PlayerPositionManager(50.0);
        ProximityVoiceManager proxManager = new ProximityVoiceManager(posManager);
        
        server.start();
        
        // Web interface for position control
        startWebInterface(8080, posManager);
        
        System.out.println("Standalone Voice Server running!");
        System.out.println("Web interface: http://localhost:8080");
    }
    
    private static void startWebInterface(int port, PlayerPositionManager posManager) {
        // Simple HTTP server for position updates
        // Players can set their positions via web page
    }
}
